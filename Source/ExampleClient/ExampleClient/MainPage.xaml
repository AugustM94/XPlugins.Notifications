<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExampleClient.MainPage"
             Title="Notifications Example Client">

    <StackLayout Orientation="Vertical">
        <StackLayout>
            <Button Text="Schedule Now" Clicked="ScheduleNowButton_OnClicked" />
        </StackLayout>
        <StackLayout>
            <Button Text="Schedule in 2 Mins" Clicked="ScheduleTwoMinutesButton_OnClicked" />
        </StackLayout>
        <StackLayout Orientation="Vertical">
            <StackLayout Orientation="Horizontal">
                <Label Text="Extra Info:" />
                <Switch x:Name="ExtraInfoSwitch" IsToggled="False" />
            </StackLayout>
            <StackLayout Orientation="Horizontal" BindingContext="{x:Reference Name=ExtraInfoSwitch}" IsEnabled="{Binding IsToggled}">
                <Label Text="Extra Info Number:" />
                <Entry x:Name="ExtraInfoNumberEntry" />
            </StackLayout>
            <StackLayout Orientation="Horizontal" BindingContext="{x:Reference Name=ExtraInfoSwitch}" IsEnabled="{Binding IsToggled}">
                <Label Text="Extra Info Text:" />
                <Entry x:Name="ExtraInfoTextEntry" />
            </StackLayout>
        </StackLayout>
    </StackLayout>

</ContentPage>